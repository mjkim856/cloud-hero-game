[Unit]
Description=Cloud Hero Game
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/cloud-hero-game
Environment=PATH=/home/ubuntu/.local/bin:/usr/local/bin:/usr/bin:/bin
Environment=SECRET_KEY=cloud-hero-secret-key-2024-production
Environment=FLASK_DEBUG=False
Environment=FLASK_HOST=0.0.0.0
Environment=FLASK_PORT=80
ExecStart=/usr/bin/python3 application.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target